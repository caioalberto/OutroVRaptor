<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
	pageEncoding="ISO-8859-1" isELIgnored="false"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script type="text/javascript"
	src="<c:url value="/js/jquery.puts.js"></c:url>"></script>
<script type="text/javascript"
	src="<c:url value="/js/jquery.validate.min.js"></c:url>"></script>
<script type="text/javascript"
	src="<c:url value="/js/jquery.autocomplete.min.js"></c:url>"></script>
<link href="<c:url value="/css/jquery.autocomplete.css"></c:url>"
	rel="stylesheet">
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script
	src="http://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
<script>
    $(document).ready(function() {
        $("#botao-carrinho").hover(function() {
            $("#mini-carrinho").toggle(100);
        });
    });
</script>
<style>
#mini-carrinho {
	display: none;
	margin-top: -2%;
	margin-left: 89%;
	width: auto;
	height: auto; 
	position: absolute;
	z-index: 4;
}

.navbar-custom {
	background-color: #515053;
	border-color: #515053;
}

.navbar-custom .navbar-brand {
	color: #CBC7CD;
}

.navbar-custom .navbar-brand:hover, .navbar-custom .navbar-brand:focus {
	color: #CBC7CD;
}

.navbar-custom .navbar-nav>li>a {
	color: #CBC7CD;
}

.navbar-custom .navbar-nav>li>a:hover, .navbar-custom .navbar-nav>li>a:focus
	{
	color: #515053;
}

.navbar-custom .navbar-nav>.active>a, .navbar-custom .navbar-nav>.active>a:focus
	{
	color: #eee;
	background-color: #CBC7CD;
}

.navbar-custom .navbar-nav>li>a:hover {
	background-color: #CBC7CD;
}
</style>
<nav class="navbar navbar-custom">
<div class="container-fluid">
	<div class="navbar-header">
		<a class="navbar-brand" href="#">WebSalão</a>
	</div>
	<ul class="nav navbar-nav">
		<li class="active"><a href="#">Home</a></li>
		<li><a href="<c:url value="/produtos/novo"/>"> Novo Produto </a></li>
		<li><a href="<c:url value="/produtos"/>"> Tabela de Preços </a></li>
		<li class="dropdown"><a class="dropdown-toggle"
			data-toggle="dropdown" href="#">Marcar Horário<span class="caret"></span></a>
			<ul class="dropdown-menu">
				<li><a href="#">Janeiro</a></li>
				<li><a href="#">Fevereiro</a></li>
				<li><a href="#">Março</a></li>
				<li><a href="#">Abril</a></li>
				<li><a href="#">Maio</a></li>
				<li><a href="#">Junho</a></li>
				<li><a href="#">Julho</a></li>
				<li><a href="#">Agosto</a></li>
				<li><a href="#">Setembro</a></li>
				<li><a href="#">Outubro</a></li>
				<li><a href="#">Novembro</a></li>
				<li><a href="#">Dezembro</a></li>
			</ul></li>
		<li>
			<form class="navbar-form" role="search"
				action="<c:url value="/produtos/busca"/>">
				<div class="form-group">
					<input id="busca" name="nome" type="text" class="form-control">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-default">
						<span class="glyphicon glyphicon-search"></span>Pesquisar
					</button>
				</div>
			</form>
		</li>
	</ul>
	<ul class="nav navbar-nav navbar-right">
		<c:if test="${usuarioWeb.logado}">
			<li><a href="#"><span class="glyphicon glyphicon-user"></span>
					Olá, ${usuarioWeb.nome }!</a></li>
			<li><a href="<c:url value="/logout"/>"> <span
					class="glyphicon glyphicon-log-out"></span>Logout
			</a></li>
		</c:if>
		<c:if test="${empty usuarioWeb or not usuarioWeb.logado}">
			<li><a href="<c:url value="/login"/>"><span
					class="glyphicon glyphicon-log-in"></span> Login</a></li>
			<li><a href="<c:url value="/usuarios/novo"/>"><span
					class="glyphicon glyphicon-user"></span> Cadastre-se</a></li>
		</c:if>
		<li><a href="<c:url value="/carrinho"/>" id="botao-carrinho">
				<span class="glyphicon glyphicon-shopping-cart"></span>Carrinho<span
				class="badge" style="background-color: #00ccff">${carrinho.totalItens}</span>
		</a></li>
	</ul>
	<script type="text/javascript">
        $("#busca").puts("Nome do produto...");

        $("#busca").autocomplete('/produto/produtos/busca.json', {
            dataType : "json", // pra falar que vamos tratar um json
            parse : function(produtos) { // para tratar o json
                // a função map vai iterar por toda a lista, 
                // e transformar os dados usando a função passada
                return $.map(produtos, function(produto) {
                    return {
                        // todos os dados do produto
                        data : produto,
                        // o valor lógico do produto
                        value : produto.nome,
                        // o que vai aparecer ao selecionar
                        result : produto.nome
                    };
                });
            },
            // o que vai aparecer na lista de autocomplete
            formatItem : function(produto) {
                return produto.nome + "(" + produto.preco + ")";
            }
        });
    </script>
</nav>
<div class="container">
	<div id="erros">
		<c:if test="${errors.size() >= 1}">
			<c:forEach items="${errors}" var="error">
				<div class="alert alert-danger fade in">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<ul>
						<li><strong>Erro:</strong> ${error.message}</li>
					</ul>
				</div>
			</c:forEach>
		</c:if>
	</div>
</div>
<div id="mini-carrinho" class="alert alert-info">
	<c:if test="${empty carrinho or carrinho.totalItens eq 0 }">
		<p>Você não possui itens no seu carrinho</p>
	</c:if>
	<c:if test="${carrinho.totalItens > 0 }">
				<p>Itens: <c:out value="${carrinho.totalItens }"/>
				Total:<fmt:formatNumber type="currency"
						value="${carrinho.total }" /></p>
	</c:if>
</div>